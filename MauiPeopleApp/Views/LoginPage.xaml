<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiPeopleApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MauiPeopleApp.ViewModels"
    x:DataType="viewmodels:LoginViewModel"
    Title="Sign In">

    <VerticalStackLayout Padding="24" Spacing="20" VerticalOptions="Center">
        <Label Text="Sign in with biometrics" FontSize="Title" HorizontalOptions="Center" />
        <Button
            Text="Authenticate"
            Command="{Binding LoginWithFingerprintCommand}" />
    </VerticalStackLayout>
</ContentPage>